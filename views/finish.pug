extends layout
block content
	-data = data || {}
		
		if errors
			ul.errors
				for error in errors
					li= error.msg
	h1(class="form-registration") Almost Done!
	form(action="/home" method="POST" class="form-registration")
		label(for="username") Username:
		input(
			type="text"
			id="username"
			name="username"
			class="form-control"
			value=data.username
		)
		label(for="bio") Bio:
		textarea(
			id="bio"
			name="bio"
			class="form-control"
			value=data.bio
		)
		input(
			type="hidden"
			id="registerId"
			name="registerId"
			class="form-control"
			value=data.registerId
		)
		input(type="submit" value="Finish" class="btn btn-lg btn-primary btn-block")
	script(src="/js/auto-expand.js")
	script(src="/js/save-registerId.js")
